<%- include('../partials/header.ejs') %>

<div class="link">
    <h3>
        <%= readList.name %>
    </h3>

    <ul>
        <% readList.books.forEach(function(book) { %>
            <li>
                <div class="item">
                    <form action="/books/<%= readList.id %>/<%= book.id %>?_method=DELETE" method="POST">
                        <p>
                            <%= book.name %>
                        </p>
                        <button type="submit">X</button>
                    </form>
                </div>
            </li>
            <% }); %>
    </ul>

    <form action="/books/<%= readList._id %>" method="POST">
        <input type="text" name="name" id="name"><br>
        <button type="submit">Add Book</button>
    </form>

    <a href="/read-lists/<%= readList.id %>/edit">Edit</a>
</div>
<%- include('../partials/footer.ejs') %>