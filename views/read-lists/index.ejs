<%- include('../partials/header') %>

<div class="title-container">
    <h2>Reading Lists</h2>
</div>

<div class="link">
    <h3>
        <a href="/read-lists/new"  >Add a Reading List</a>
    </h3>
</div>
<div class="link">
    <ul>
        <% readLists.forEach(function(readList) { %>
            <li>
                <form action="/read-lists/<%= readList.id %>?_method=DELETE" method="POST">
                    <button type="submit">X</button>
                </form>
                <a href="/read-lists/<%= readList.id %>">
                    <%= readList.name %>
                </a>
            </li>
            <% }); %>
    </ul>
</div>
<%- include('../partials/footer') %>